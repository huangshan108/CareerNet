-# in app/views/jobs/detail.html.haml

%h2 Details about #{@job.title}

%ul#details
  %li
    Company:
    = @job.company

  %li
    salary:
    = @job.salary

%h3 Description:

%p#description= @job.description

= button_to 'Apply this Job', job_path(@job), :method => :apply, :confirm => 'Are you sure?'
= link_to 'Back to Job list', jobs_path

