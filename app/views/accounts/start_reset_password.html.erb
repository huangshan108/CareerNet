<%= form_tag(:action => 'start_reset_password') do %>
	<div class="form-group has-feedback">
		<%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password' %>
	</div>
  	<div class="form-group has-feedback">
    	<%= password_field_tag :password2, params[:password2], class: 'form-control', placeholder: 'Re-type Password' %>
  	</div>
  	<div class="actions">
    	<%= submit_tag "Reset Password", class: "btn pull-right" %>
  	</div>
 <% end %>