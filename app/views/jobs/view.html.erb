<h2> Details about <%= @job.title %> </h2>

<ul>
	<li> 
		<b>Company:</b><%= @job.company.name %>
	</li>
	<li> 
		<b>Salary:</b><%= @job.salary + " $" %>
	</li>
	<li>
 		<b> Description:</b><%= @job.description %>
	</li>
</ul>

<%if @current_user.account_type == 3%>
<%= link_to "Delete", delete_job_path(@job), :method => :delete %>
<%end%>
<%if @current_user.account_type == 1 || @current_user.account_type == 2 %>
<%= link_to "Apply", apply_job_path(:job_id => params[:job_id]), :method => :post %>
<%end%>
<%= link_to "Back to the Job list", job_list_path %>


<%if @current_user.account_type != 1%>
<h2> Job Applications </h2>
<table class="job_list" border = "1" style="width: 700px";>   
  <tr>
  	<th> Applicant Name </th>
  	<th> Applied Position </th>
  	<th> Applied Date </th>
  </tr>
  <% @job.applications.each do |application| %>
	  <tr>
	    <td><%=link_to "#{application.student.first_name} #{application.student.last_name}", single_student_profile_path(application.student.account.id) %></td>
	    <td><%= @job.title %></td>
	    <td><%= application.created_at %></td>
	  </tr>
	<% end %>
</table>
<%end%>