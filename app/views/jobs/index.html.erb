<p></p>
<head>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" ></script>
  <script src="http://dotdotdot.frebsite.nl/js/jquery.dotdotdot-1.2.1.js" ></script>
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
}
</style>
</head>


<table class="job_list" border = "1" style="width: 700px";>
   
  <tr>
  	<th> <%=link_to 'Job', job_list_path(:sort => 'title', :page => params[:page])%> </th>
  	<th> <%=link_to 'Company', job_list_path(:sort => 'company', :page => params[:page])%> </th>
  	<th> Description </th>
  	<th> <%=link_to 'Salary', job_list_path(:sort => 'salary', :page => params[:page])%> </th>
  	<th> Created </th>
  	<th> Added </th>
  </tr>
  <% @jobs.each do |job| %>
	  <tr>
	    <td><div class="job_title"><%= job.title %><div></td>
	    <td><div class="company"><%= job.company %><div></td>
	    <td><div id ="descbox" class="desc"><%= job.description %></div></td>
	    <td><div class="salary"><%= job.salary %><div></td>
	    <td><div class="date"><%= job.created_at %><div></td>
	    <td><div class="date"><%= job.updated_at %><div></td>
	  </tr>
	  <% end %>
    <script type="text/javascript">
     $(".desc").dotdotdot()
    </script>

</table>

<%= will_paginate @jobs %>
