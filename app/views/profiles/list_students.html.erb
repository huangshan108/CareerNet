<h1> All Students </h1>
<table class="data-table table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> University </th>
      <th> Major </th>
      <th> Graduation Date </th>
      <th> More Info </th>
      <% if is_staff? %>
        <th>Delegation</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% for student in @all_students -%>
      <tr>
        <td><%= student.first_name + ' ' + student.last_name -%></td>
        <td><%= link_to student.college.school_name, single_school_profile_path(student.college) -%></td>
        <td><%= student.major.name -%></td>
        <td><%= student.graduation_date.strftime('%D') if student.graduation_date -%></td>
        <td><%= link_to "More details", single_student_profile_path(student) -%></td>
        <% if is_staff? %>
          <td><%= link_to "Sign in", as_student_path(student) -%></td>
        <% end %>
      </tr>
    <% end -%>
  </tbody>
</table>
<script type="text/javascript">
  $(document).ready(function() {
    $('.data-table').dataTable({
      "pageLength": 25,
      "lengthMenu": [ 25, 50, 100 ]
    });
  })
</script>
