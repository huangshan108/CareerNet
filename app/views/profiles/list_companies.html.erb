<h1> All Companies </h1>
<table class="data-table table table-striped">
  <thead>
    <tr>
      <th> Name </th>
      <th> More Info </th>
      <% if is_staff? %>
        <th>Delegation</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% for company in @all_companies -%>
      <tr>
        <td><%= company.name -%></td>
        <td><%= link_to "More details", company_profile_path(company) -%></td>
        <% if is_staff? %>
          <td><%= link_to "Sign in", as_company_path(company) -%></td>
        <% end %>
      </tr>
    <% end -%>
  </tbody>
</table>
<script type="text/javascript">
  $(document).ready(function() {
    $('.data-table').dataTable({
      "pageLength": 25,
      "lengthMenu": [ 25, 50, 100 ]
    });
  })
</script>
