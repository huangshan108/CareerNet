<h1><%= @event.title %></h1>


<dl class="dl-horizontal"> 
	<dt>Start</dt>
	<dd><%= @event.time_start.strftime('%D %H:%M %p') if @event.time_start %></dd>
	<dt>End</dt>
	<dd><%= @event.time_end.strftime('%D %H:%M %p') if @event.time_end %></dd>
	<dt>Location</dt>
	<dd><%= @event.location %></dd>
	<dt>Description</dt>
	<dd><%= @event.description %></dd>
</dl>
<div class="pull-right button-group">
	<%= link_to 'Register', events_path, class: "button green" %>
	<%if @current_user.account_type == 2%>
	<%= link_to 'Delete', event_path(@event), class: "button red", :method => :delete %>
	<%end%>
	<%= link_to 'Back', events_path, class: "button default" %>
</div>