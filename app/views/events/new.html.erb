<h1>Create New Event</h1>

<%= form_tag events_path do %>
 	<dl class="dl-horizontal">
 		<dt>Title</dt>
  	<dd><%= text_field_tag :title, params[:title] %></dd>
    <dt>Start Time</dt>
  	<dd><%= datetime_select :time_start, prompt: true %></dd>
  	<dt>End Time</dt>
  	<dd><%= datetime_select :time_end, prompt: true %></dd>
  	<dt>Description</dt>
  	<dd><%= text_area_tag :description, params[:description] %></dd>
  	<dt>Location</dt>
  	<dd><%= text_field_tag :location, params[:location] %></dd>
  </dl>
  <%= submit_tag "Create", class: "button pull-right blue" %>
<% end %>
